<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shinitai.nicolle.brightness.MainActivity"
    android:background="@drawable/totor"
    android:weightSum="1"
    android:orientation="vertical">


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="510"
        android:progress="255"
        android:layout_weight="0.05"
        android:thumbTint="@android:color/holo_blue_bright"
        android:progressTint="@android:color/holo_blue_bright" />


    <ImageView
        android:layout_width="341dp"
        android:layout_height="259dp"
        app:srcCompat="@drawable/isshoni"
        android:id="@+id/imageView"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
